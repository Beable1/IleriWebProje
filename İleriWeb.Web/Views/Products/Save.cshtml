
@{
    ViewData["Title"] = "Save";
}
@model ProductDto

<h1>Save</h1>
<div class="row">
    <div class="col-md-6">

        <form asp-action="Save" method="post" enctype="multipart/form-data" asp-controller="Products">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control"> <option value="0" selected>Seçiniz</option></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductFeature.Color"></label>
                <input asp-for="ProductFeature.Color" class="form-control" />
                <span asp-validation-for="ProductFeature.Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductFeature.Height"></label>
                <input asp-for="ProductFeature.Height" class="form-control" />
                <span asp-validation-for="ProductFeature.Height" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductFeature.Width"></label>
                <input asp-for="ProductFeature.Width" class="form-control" />
                <span asp-validation-for="ProductFeature.Width" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div>
                <label for="imageFile">Product Image:</label>
                <input type="file" id="imageFile" name="imageFile" accept="image/*" required />
            </div>

            <div class="form-group">
                <input type="submit" name="Save" class="btn-primary " />
            </div>
        </form>

    </div>

</div>
